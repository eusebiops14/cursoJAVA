package entities;

public class BusinessAccount extends Account { // a palavra extends faz com que a classe BussinessAccount 

	private Double loanLimit;
	
	public BusinessAccount() {
		super();
	}

	public BusinessAccount(Integer number, String holder, Double balance, Double loanLimit) {
		super(number, holder, balance); //chama o construtor da superclasse (que é a classe account) de modo que não é necessário repetir as atribuicoes dos 3 primeiros argumentos
		this.loanLimit = loanLimit;
	}

	public Double getLoanLimit() {
		return loanLimit;
	}

	public void setLoanLimit(Double loanLimit) {
		this.loanLimit = loanLimit;
	}	
	
	public void loan(double amount) {
		if (amount <= loanLimit) {
			balance = balance + amount - 10.0;
		}
	}
}